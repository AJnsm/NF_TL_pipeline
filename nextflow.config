manifest {
    name = 'AJnsm/NF_TL_pipeline'
    author = 'Abel Jansma'
    homePage = 'https://github.com/AJnsm/NF_TL_pipeline'
    description = 'Estimating genetic interactions from scRNA-seq data.'
    mainScript = 'NF_TL_pipeline.nf'
    nextflowVersion = '21.04'
    version = '0.1'
}

params {
    report_dir = "${launchDir}/reports"
    dataType = "agnostic"
    clusterFile = "/"
    clusterArray = [1]
    userGenes = "/"
    genesToOne = "/"
    doubletFile = "/"
    boundBool = 0
    asympBool = 0
    dataDups = 0
    estimationMethod = "expectations"
    fracMito = 1
    minGenes = 0
    minCells = 0
    PCalpha = 0.05
    bsResamps = 1000
    nRandomHOIs = 1000
    plotPairwiseUpsets = 0
    sigHOIthreshold = 0.05
    minStateDeviation = 5
    stateDevAlpha = 0.05
    dendCutoff = -1
    auThreshold = 0.95
    bsResamps_HC = 100
}


profiles {
    
    eddie_singularity {
        includeConfig 'configs/eddie_singularity.config'
    }

    local_conda {
        includeConfig 'configs/local_conda.config'
    }

    local_docker {
        includeConfig 'configs/local_docker.config'
    }

    local_singularity {
        includeConfig 'configs/local_singularity.config'
    }

    singularity {
        includeConfig 'configs/singularity.config'
    }
    
    docker {
        includeConfig 'configs/docker.config'
    }

    conda {
        includeConfig 'configs/conda.config'
    }

}


report {
    enabled = true
    overwrite = true
    file = "${params.report_dir}/report.html"
}

timeline {
    enabled = true
    overwrite = true
    file = "${params.report_dir}/timeline.html"
}

trace {
    enabled = true
    overwrite = true
    file = "${params.report_dir}/trace.txt"
}

dag {
    enabled = true
    overwrite = true
    file = "${params.report_dir}/pipeline.html"
}