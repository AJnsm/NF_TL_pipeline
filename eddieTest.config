

params{
    h5File = "${projectDir}/cellData/1M_neurons_20k.h5"
    clusterFile = "${projectDir}/cellData/clusters_20k.csv"
    doubletFile = "${projectDir}/cellData/bcDoublets_20k.csv"
}

process {
    clusterOptions = {"-l h_vmem=${task.memory.bytes/task.cpus}"}
    executor = 'sge'

    withName: makeData {
        executor = 'sge'
        cores = 1
        memory = '64 GB'
        time = '10m'
    }

    withName: estimatePCgraph {
        executor = 'sge'
        cores = 16
        memory = '2 GB'
        time = '10m'
    }

    withName: iterMCMCscheme {
    executor = 'sge'
    cores = 1
    memory = '8 GB'
    time = '5m'
    }

    withName: estimateCoups {
    executor = 'sge'
    cores = 12
    memory = '4 GB'
    time = '5m'
    }
}

executor {
    queueSize = 25
}
