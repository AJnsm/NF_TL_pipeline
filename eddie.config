
params{
    h5File = "${launchDir}/cellData/1M_neurons.h5"
    clusterFile = "${launchDir}/cellData/clusters.csv"
    doubletFile = "${launchDir}/cellData/bcDoublets.csv"
}

process {
    clusterOptions = {"-l h_vmem=${task.memory.bytes/task.cpus}"}
    executor = 'sge'

    withName: makeData {
        executor = 'sge'
        cpus = 1
        memory = '64 GB'
        time = '10h'
    }

    withName: estimatePCgraph {
        executor = 'sge'
        cpus = 16
        memory = '2 GB'
        time = '140h'
    }

    withName: iterMCMCscheme {
    executor = 'sge'
    cpus = 1
    memory = '8 GB'
    time = '8h'
    }

    withName: estimateCoups {
    executor = 'sge'
    cpus = 12
    memory = '4 GB'
    time = '10h'
    }
}

executor {
    queueSize = 25
}
