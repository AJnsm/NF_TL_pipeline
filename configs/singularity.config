process {
    
	withName: makeData {
        container = 'docker://ajnsm/py_nf_container_new'
    }

    withName: estimatePCgraph {
        container = 'docker://ajnsm/r_nf_container'
    }

    withName: iterMCMCscheme {
        container = 'docker://ajnsm/r_nf_container'
    }

    withName: estimateCoups_1pts {
        container = 'docker://ajnsm/py_nf_container_new'
    }

    withName: estimateCoups_2pts {
        container = 'docker://ajnsm/py_nf_container_new'
    }

    withName: estimateCoups_3pts {
        container = 'docker://ajnsm/py_nf_container_new'
    }
        
}

singularity {
    enabled = true
    autoMounts = true
    pullTimeout = '1h'
    envWhitelist = 'SINGULARITY_TMPDIR,TMPDIR'
}


report {
    enabled = true
    file = "${params.report_dir}/report.html"
}

timeline {
    enabled = true
    file = "${params.report_dir}/timeline.html"
}

trace {
    enabled = true
    file = "${params.report_dir}/trace.txt"
}

dag {
    enabled = true
    file = "${params.report_dir}/pipeline.svg"
}